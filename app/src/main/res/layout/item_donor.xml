<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Donor Icon -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"

                app:tint="@color/primary_red" />

            <!-- Donor Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/donor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donor Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/donor_blood_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/blood_type_badge"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="O+"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/donor_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Location"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_location" />

                <TextView
                    android:id="@+id/donor_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="@color/grey_600"
                    android:textSize="14sp"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@drawable/ic_phone" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/call_donor_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="@color/green"
                    android:text="Call"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_phone" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/message_donor_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/primary_blue"
                    android:text="Message"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_message_white" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>